package com.company;

import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;

/**
 * Write a program to create a file named Excercise17_02.dat if it does not exist. Append new data to it if it exists.
 * Write 100 random integers into the file using binary I/O.
 */

public class Main {

    public static void main(String[] args) throws IOException {
	//Output stream to file
        try (
                FileOutputStream outputStream = new FileOutputStream("Excercise17_02.dat", true);
                )
        {
            //Output 100 random Integers
            for (int i = 0; i < 100; i++) {
                outputStream.write((int)(1 + Math.random() * 100));
            }
        } catch (IOException exception) {
            exception.printStackTrace();
        }
        //Read the same file
        try (
                FileInputStream inputStream = (new FileInputStream("Excercise17_02.dat"));
                ) {
            //Read the 100 integers generated by the outputStream
            for (int i = 0; i < 100; i++){
                System.out.println(inputStream.read());
            }

        }

    }
}
